@model eserProje.Models.Likee

@{
    ViewData["Title"] = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detay</h1>

<div class="col-xl-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Beğeni Detayı</h4>
        </div>
        <div class="card-body">
            <div class="basic-list-group">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>ID</strong> : @Model.LikeeID</li>
                    <li class="list-group-item"><strong>Kullanıcı</strong> : @Model.Userr.Email</li>
                    <li class="list-group-item"><strong>Giysi</strong> : @Model.Cloth.ClothName</li>
                    <li class="list-group-item"><strong>Beğeni Tarihi</strong> : @Model.LikeeDate</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn" asp-action="Duzenle" asp-route-id="@Model?.ClothID">Düzenle</a> |
     <a class="btn" asp-action="Listele">Geri Dön</a>
</div>
