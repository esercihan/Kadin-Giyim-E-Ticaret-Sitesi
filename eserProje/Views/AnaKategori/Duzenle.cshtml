@model eserProje.Models.MainCategory

@{
    ViewData["Title"] = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-6 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">ANA KATEGORİ YÖNETİMİ</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-controller="AnaKategori" asp-action="Duzenle" method="post">
                    <div asp-validation-summary="All" class="text-danger"> </div>
                    <input type="hidden" name="MainCategoryID" value="@Model.MainCategoryID"/>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Ana Kategori Adı</label>
                            <input type="text" name="MainCategoryName" class="form-control" value="@Model.MainCategoryName">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">GÜNCELLE</button>
                    <a style="float:right" class="btn btn-danger" asp-action="Listele">İPTAL</a>
                </form>
            </div>
        </div>
    </div>
</div>

