@model eserProje.Models.MainCategory

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xl-6 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">ANA KATEGORİ YÖNETİMİ</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-controller="AnaKategori" asp-action="Ekle" method="post">
                    <div asp-validation-summary="All" class="text-danger"> </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Ana Kategori Adı</label>
                            <input type="text" name="MainCategoryName" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">EKLE</button>
                    <a style="float:right" class="btn" asp-action="Listele">Geri Dön</a>
                </form>
            </div>
        </div>
    </div>
</div>